<?xml version="1.0" encoding="UTF-8"?>

<?import club.xiaojiawei.controls.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import club.xiaojiawei.controls.ico.OKIco?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@css/advancedSettings.css"
            fx:controller="club.xiaojiawei.controller.JavaFXAdvancedSettingsController">
    <VBox styleClass="main">
        <HBox styleClass="h-box">
            <Text text="自动打开Web界面："/>
            <Switch fx:id="webSwitch" initStatus="false" size="20"/>
        </HBox>
        <HBox styleClass="h-box">
            <Text text="Web安全验证："/>
            <Switch fx:id="verifySwitch" initStatus="false"/>
            <PasswordShowField prefWidth="50" styleClass="password-show-field-ui, password-show-field-ui-small" fx:id="psw" promptText="验证密码"/>
            <Button styleClass="btn-ui, btn-ui-success, btn-ui-small" text="保存密码" onMouseClicked="#saveVerifyPassword"/>
            <OKIco scaleY="1.3" scaleX="1.3" fx:id="verifyOK" managed="false" visible="false"/>
        </HBox>
        <HBox styleClass="h-box">
            <Text text="执行策略："/>
            <Switch fx:id="strategySwitch" initStatus="false"/>
        </HBox>
        <HBox styleClass="h-box">
            <Text text="更新开发版："/>
            <Switch fx:id="updateDev" initStatus="false"/>
        </HBox>
        <HBox styleClass="h-box">
            <Text text="自动更新："/>
            <Switch fx:id="autoUpdate" initStatus="false"/>
        </HBox>
    </VBox>
</AnchorPane>
